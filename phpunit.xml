<?xml version="1.0"?>
<phpunit
	bootstrap="tests/bootstrap.php"
	backupGlobals="false"
	colors="true"
	convertErrorsToExceptions="true"
	convertNoticesToExceptions="true"
	convertWarningsToExceptions="true"
	>
	<testsuites>
		<testsuite name="all">
			<directory suffix="Test.php">./tests/</directory>
			<file>./test/after-unit-tests.php</file>
			<exclude>./test/unit-test-sample.php</exclude>
		</testsuite>
	</testsuites>
</phpunit>
